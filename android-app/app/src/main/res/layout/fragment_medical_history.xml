<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="6dp"
    android:paddingBottom="12dp">

    <!-- Control section copied from Prescriptions -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/searchBarBackground"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_search_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintStart_toStartOf="@id/searchBarBackground"
                    app:layout_constraintTop_toTopOf="@id/searchBarBackground"
                    app:layout_constraintBottom_toBottomOf="@id/searchBarBackground" />

                <EditText
                    android:id="@+id/searchBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="Buscar dentro del expediente"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_secondary"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/searchIcon"
                    app:layout_constraintEnd_toEndOf="@id/searchBarBackground"
                    app:layout_constraintTop_toTopOf="@id/searchBarBackground"
                    app:layout_constraintBottom_toBottomOf="@id/searchBarBackground" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_filter_button"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Filtros"
                android:textAllCaps="false"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_filter"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/text_secondary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/historyScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Información personal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Información personal"
                android:textColor="@color/text_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/patientInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/patientAvatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/bg_filter_button"
                            android:padding="8dp"
                            android:src="@drawable/ic_person"
                            android:tint="@color/text_dark" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/patientName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Juan Pérez García"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/patientId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID paciente: 550e8400-e29b-41d4"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/gray_200" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/birthDateValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nacimiento: --"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/genderValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Sexo: --"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/phoneValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Teléfono: --"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/emailValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Correo: --"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/addressValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Dirección: --"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Antecedentes y condiciones -->
            <TextView
                android:id="@+id/conditionsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antecedentes y Condiciones"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/conditionsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/conditionsChipRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/conditionsChipCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_chip_primary"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="0 registros"
                            android:textColor="@color/chip_primary_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/conditionsChipUpdated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip_neutral"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="Última: --"
                            android:textColor="@color/chip_neutral_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/conditionsListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/conditionsViewAllButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Ver todo"
                        android:textAllCaps="false"
                        android:textColor="@color/button_primary_bg"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/button_primary_bg" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Alergias -->
            <TextView
                android:id="@+id/allergiesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alergias"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/allergiesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/allergiesChipRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/allergiesChipCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_chip_primary"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="0 alergias"
                            android:textColor="@color/chip_primary_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/allergiesChipCritical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip_warning"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="0 severas"
                            android:textColor="@color/chip_warning_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/allergiesListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/allergiesViewAllButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Ver todo"
                        android:textAllCaps="false"
                        android:textColor="@color/button_primary_bg"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/button_primary_bg" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Procedimientos -->
            <TextView
                android:id="@+id/proceduresHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procedimientos"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/proceduresCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/proceduresChipRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/proceduresChipCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_chip_primary"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="0 estudios"
                            android:textColor="@color/chip_primary_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/proceduresChipRecent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip_neutral"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="Último: --"
                            android:textColor="@color/chip_neutral_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/proceduresListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/proceduresViewAllButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Ver todo"
                        android:textAllCaps="false"
                        android:textColor="@color/button_primary_bg"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/button_primary_bg" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Historial familiar -->
            <TextView
                android:id="@+id/familyHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial familiar"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/familyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/familyChipRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/familyChipCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_chip_primary"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="0 registros"
                            android:textColor="@color/chip_primary_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/familyChipDeceased"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip_neutral"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="Fallecidos: 0"
                            android:textColor="@color/chip_neutral_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/familyListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/familyViewAllButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Ver todo"
                        android:textAllCaps="false"
                        android:textColor="@color/button_primary_bg"
                        app:icon="@drawable/ic_chevron_right"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/button_primary_bg" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



